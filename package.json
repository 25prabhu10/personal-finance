{
  "name": "pf",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "author": "Prabhu",
  "description": "Your Personal Finance management tool",
  "scripts": {
    "dev": "pnpm run -r --parallel --aggregate-output dev",
    "lint": "pnpm run -r --parallel lint",
    "lint:fix": "pnpm run -r --parallel lint:fix",
    "format": "pnpm run -r --parallel format",
    "build": "pnpm run -r build",
    "check-types": "pnpm run -r --parallel check-types"
  },
  "devDependencies": {
    "lint-staged": "^15.5.0",
    "simple-git-hooks": "^2.12.1",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "personal finance",
    "budgeting",
    "expense tracking",
    "income tracking"
  ],
  "packageManager": "pnpm@10.8.0",
  "engines": {
    "node": ">=23"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css,json}": "pnpm run format"
  }
}
